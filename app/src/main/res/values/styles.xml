<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/lock_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/lock_color</item>
        <item name="android:itemBackground">@color/lock_color</item>
        <!--<item name="colorControlNormal">@color/blue_grey</item>
        <item name="colorControlActivated">@color/blue_grey</item>
        <item name="colorControlHighlight">@color/blue_grey</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowBackground">@android:color/white</item>-->
        <!--<item name="colorControlNormal">@android:color/white</item>-->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!--<item name="preferenceTheme">@style/PreferenceStyle</item>-->
        <!--<item name="colorControlActivated">@android:color/white</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:buttonTint">@color/blue_grey</item>
        <item name="android:textColor">@color/blue_grey</item>
    </style>

    <style name="ToolbarSubtitleTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation">20dp</item>
    </style>

    <style name="ThemeOverlay.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
        <item name="colorAccent">@color/lock_color</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@color/lock_color</item>
    </style>

    <style name="MyProgressDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AttachmentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="PreferenceStyle" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@color/lock_color</item>
        <item name="colorPrimary">@color/lock_color</item>
        <item name="android:iconSpaceReserved">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_stroke</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/ic_button_rounded</item>
    </style>

</resources>
